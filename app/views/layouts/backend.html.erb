<!DOCTYPE html>
<html lang="en">
  <head>
  <meta charset="utf-8"
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'backend', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'backend', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="text-center mb-4">
    <div class="padre">
      <h2 class="h3 mb-3 font-wight-normal"> Please sing in</h2>
    </div>
    <div class="hijo">
      <label class="sr-only" for="inputEmail"> Email address</label>
      <input id="inputEmail" class="form-control" type="email"
      placeholder="Email address" required="" autofocus="">
      <label class="sr-only" for="inputPassword">Password</label>
    </div>
    <div class="hijo">
      <input id="inputPassword" class="form-control" type="password"
      placeholder="password" required="">
    </div>
    <div class="hijo">
      <label>
        <input type="checkbox" value="remember-me">
        Remember me
      </label>
    </div>
    <div class="hijo">
      <button class="hijo" class="btn-primary"
      type="submit">Sing in</button>
    </div>
  </form>  
  </body>
</html>
