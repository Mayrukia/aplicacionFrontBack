<%= render 'flash_message' %>
<%= form_with model: [:backend, @user], local: true do |form| %>
<div class='card'>
  <div class='card-body'>

    <div class="form-group">
      <%= form.label :name, 'Nombre' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :email, 'Email' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :encrypted_password, 'ContraseÃ±a' %>
      <%= form.text_field :encrypted_password, class: 'form-control' %>

    </div>
  </div>
  <div class='card-footer'>
    <%= link_to 'Volver', backend_users_path, class: 'btn btn-outline-secondary' %>
    <%= form.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
