<tr id='<%= dom_id(tag) %>'>
  <td><%= tag.name %></td>
  <td class='text-right'>
    <%= link_to 'Editar', edit_backend_tag_path(tag), remote: true, class: 'btn btn-success' %>
    <%= link_to 'Borrar', backend_tag_path(tag), method: :delete, remote: true, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger' %>
  </td>
</tr>
